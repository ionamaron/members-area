<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h1>Listing Members</h1>

<p>
<%= form_tag( members_path, method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q, params[:q]) %>
  <%= submit_tag("Search", :class => "btn btn-default btn-s")  %>
<% end %>
</p>

<%= link_to 'All Members', members_path, :class => "btn btn-default" %>

<%= link_to 'New Member', new_member_path, :class => "btn btn-default" %>
  </div>
  <div class="panel-body">
<% if @members.any? %>
<div class="table-responsive">
  <table class="table table-striped">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th>Mobil number</th>
          <th>Date of joining</th>
          <th>Exit date</th>
          <th>Choir active</th>
          <th>Voice</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td><%= member.first_name %></td>
            <td><%= member.last_name %></td>
            <td><%= member.email %></td>
            <td><%= member.mobil_number %></td>
            <td><%= member.date_of_joining %></td>
            <td><%= member.exit_date %></td>
            <td><%= check_box_tag :choir_active, 1, member.choir_active, :disabled => true %></td>
            <td><%= member.voice %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, member, :title => "Show" %></td>
            <% if current_user.admin? %>
              <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_member_path(member), :title => "Edit" %></td>
              <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, member, method: :delete, data: { confirm: 'Are you sure?' }, :title => "Destroy" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p>no member available</p>
<% end %>
<br>
</div>