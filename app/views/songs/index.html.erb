<div class="page-header">

  <div class="pull-right">
    <form class="form-inline pull-right" role="search">
        <%= link_to 'All Songs', songs_path, :class => "btn btn-primary" %>
        <%= link_to 'New Song', new_song_path, :class => "btn btn-primary" %>
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" name="q">
            <div class="input-group-btn">
                <button class="btn btn-primary" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </form>
  </div>

  <h1>Songs</h1>

</div>

<div class="page-body">
<% if @songs.any? %>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Number</th>
        <th>Title</th>
        <th>Composer</th>
        <th>Sopran</th>
        <th>Alt</th>
        <th>Tenor</th>
        <th>Bass</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @songs.each do |song| %>
        <tr>
          <td><%= song.number %></td>
          <td><%= song.title %></td>
          <td><%= song.composer %></td>
          <td><%= check_box_tag :sopran, 1, song.sopran, :disabled => true %></td>
          <td><%= check_box_tag :alt, 1, song.alt, :disabled => true %></td>
          <td><%= check_box_tag :tenor, 1, song.tenor, :disabled => true %></td>
          <td><%= check_box_tag :bass, 1, song.bass, :disabled => true %></td>
          <!-- <td><%= link_to 'Show', song, :class => "glyphicon glyphicon-eye-open" %></td> -->
          <!-- <td><%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, song, :title => "Show" %></td> -->
          <% if current_user.admin? %>
            <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_song_path(song), :title => "Edit" %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, song, method: :delete, data: { confirm: 'Are you sure?' }, :title => "Destroy" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
  <% flash[:error] = "There is no song available." %>
<% end %>
<br>
</div>

