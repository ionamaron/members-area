<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h1>Listing Songs</h1>

<p>
<%= form_tag( songs_path, method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q, params[:q]) %>
  <%= submit_tag("Search", :class => "btn btn-default btn-s")  %>
<% end %>
</p>

<%= link_to 'All Songs', songs_path, :class => "btn btn-default" %>

<%= link_to 'New Song', new_song_path, :class => "btn btn-default" %>
  </div>
  <div class="panel-body">
<% if @songs.any? %>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Number</th>
        <th>Title</th>
        <th>Composer</th>
        <th>Sopran</th>
        <th>Alt</th>
        <th>Tenor</th>
        <th>Bass</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @songs.each do |song| %>
        <tr>
          <td><%= song.number %></td>
          <td><%= song.title %></td>
          <td><%= song.composer %></td>
          <td><%= check_box_tag :sopran, 1, song.sopran, :disabled => true %></td>
          <td><%= check_box_tag :alt, 1, song.alt, :disabled => true %></td>
          <td><%= check_box_tag :tenor, 1, song.tenor, :disabled => true %></td>
          <td><%= check_box_tag :bass, 1, song.bass, :disabled => true %></td>
          <!-- <td><%= link_to 'Show', song, :class => "glyphicon glyphicon-eye-open" %></td> -->
          <td><%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, song, :title => "Show" %></td>
          <% if current_user.admin? %>
            <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_song_path(song), :title => "Edit" %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, song, method: :delete, data: { confirm: 'Are you sure?' }, :title => "Destroy" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
  <p>no song available</p>
<% end %>
<br>
</div>

